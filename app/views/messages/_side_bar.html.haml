
.chat-side
  .side_header
    .side_header__box
      %p.side_header__box-user-name
        = current_user.name
      %ul.side_header__box__menu
        %li.list
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li.list
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
